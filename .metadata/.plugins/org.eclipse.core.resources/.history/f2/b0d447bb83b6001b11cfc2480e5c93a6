package application;

import java.net.URL;
import java.util.ResourceBundle;
import javafx.fxml.FXML;
import javafx.scene.control.Button;

public class Client_adds extends connect {

    @FXML
    private ResourceBundle resources;

    @FXML
    private URL location;

    @FXML
    private Button tires;

    @FXML
    private Button camera;

    @FXML
    private Button interior;

    @FXML
    private Button color;

    @FXML
    private Button nothing;

    @FXML
    private Button next_scene;

    @FXML
    void initialize() {
    	tires.setOnAction(event ->{
    		adds_name="Tires";
    		adds_price="80000";
        });
    	
    	camera.setOnAction(event ->{
    		adds_name="Camera";
    		adds_price="150000";
        });
    	
    	interior.setOnAction(event ->{
    		adds_name="Interior";
    		adds_price="350000";
        });
    	
    	color.setOnAction(event ->{
    		adds_name="Color";
    		adds_price="15000";
        });
    	
    	nothing.setOnAction(event ->{
    		adds_name="Nothing";
    		adds_price="0";
        });
    }
}
