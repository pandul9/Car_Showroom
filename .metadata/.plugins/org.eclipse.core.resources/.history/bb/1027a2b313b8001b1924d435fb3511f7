            PreparedStatement prSt = getDbConnection().prepareStatement(select);
            resSet=prSt.executeQuery();

        } catch (ClassNotFoundException e) {

            e.printStackTrace();

        } catch (SQLException e) {

            e.printStackTrace();

        }
        return resSet;
    }
	
